import javax.swing.JOptionPane;

public class BancoInterfaz {

    public static void main(String[] args) {
        // Crear una instancia de la clase Banco con un saldo inicial de 0
        Banco cuenta = new Banco(0); 

        while (true) {
            // Menú para seleccionar la opción
            String opcion = JOptionPane.showInputDialog(null,
                    "Bienvenido al Banco\n1. Depositar\n2. Retirar\n3. Ver Saldo\n4. Salir",
                    "Menú", JOptionPane.QUESTION_MESSAGE);

            if (opcion == null) {
                break; // Si el usuario cancela, salimos del ciclo
            }

            switch (opcion) {
                case "1":
                    // Depositar dinero
                    try {
                        double cantidadDeposito = Double.parseDouble(JOptionPane.showInputDialog(null,
                                "Ingrese la cantidad a depositar:"));
                        cuenta.depositar(cantidadDeposito);
                        JOptionPane.showMessageDialog(null, "Depósito exitoso. Saldo actual: $" + cuenta.getSaldo());
                    } catch (NumberFormatException e) {
                        JOptionPane.showMessageDialog(null, "Por favor ingrese un número válido.");
                    }
                    break;

                case "2":
                    // Retirar dinero
                    try {
                        double cantidadRetiro = Double.parseDouble(JOptionPane.showInputDialog(null,
                                "Ingrese la cantidad a retirar:"));
                        if (cantidadRetiro > cuenta.getSaldo()) {
                            JOptionPane.showMessageDialog(null, "Saldo insuficiente para realizar el retiro (Verifique su saldo)");
                        } else {
                            cuenta.retirar(cantidadRetiro);
                            JOptionPane.showMessageDialog(null, "Retiro exitoso. Saldo actual: $" + cuenta.getSaldo());
                        }
                    } catch (NumberFormatException e) {
                        JOptionPane.showMessageDialog(null, "Por favor ingrese un número válido");
                    }
                    break;

                case "3":
                    // Ver el saldo
                    JOptionPane.showMessageDialog(null, "Saldo actual: $" + cuenta.getSaldo());
                    break;

                case "4":
                    // Salir del programa
                    JOptionPane.showMessageDialog(null, "Gracias por usar el Banco");
                    System.exit(0);
                    break;

                default:
                    JOptionPane.showMessageDialog(null, "Opción no válida. Por favor intente de nuevo.");
                    break;
            }
        }
    }
}
